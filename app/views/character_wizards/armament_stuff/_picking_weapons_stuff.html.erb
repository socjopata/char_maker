<h2>Wybierz broń:</h2>

<%= form_tag(character_wizards_add_item_to_inventory_path, :remote => true) do %>
    <label>Wybierz grupę broni: </label><%= select_tag 'weapon_group', options_for_select(@weapon_groups) %><br/>

    <div id="weapons">
      <%= render :partial => "character_wizards/armament_stuff/weapons", :locals => {:weapons => @weapons} %>
    </div>
    <%= hidden_field_tag :char_id, @character.id %>
    <%= hidden_field_tag :item_type, "Weapon" %>
    <%= submit_tag "Kup!" %>
<% end %>

<div id="weapons_owned">
  <p>Posiadane bronie:</p>
  <table id="character_weapons" WIDTH=60%>
    <thead>
    <th>Nazwa</th>
    <th>Ulepszenie tempa</th>
    <th>Ulepszenie obrażeń</th>
    <th>Ulepszenie ataku</th>
    <th>Ulepszenie obrony</th>
    <th>Usuń z inwentarza</th>
    </thead>
    <tbody>
    <% @character.character_weapons.each do |item| %>
        <tr id=<%= item.id %>>
          <td class="alantar_td"><p class="normal"><%= item.weapon.name -%></p></td>
          <td class="alantar_td"><p class="normal" id=<%= "#{item.class.name.tableize}_#{item.id}_speed" %>><%= weapon_upgrade_link(@character, item.resource, item, "speed") -%></p></td>
          <td class="alantar_td"><p class="normal" id=<%= "#{item.class.name.tableize}_#{item.id}_damage" %>><%=  weapon_upgrade_link(@character, item.resource, item, "damage") -%></p></td>
          <td class="alantar_td"><p class="normal" id=<%= "#{item.class.name.tableize}_#{item.id}_attack_bonus" %>><%=  weapon_upgrade_link(@character, item.resource, item, "attack_bonus") -%></p></td>
          <td class="alantar_td"><p class="normal" id=<%= "#{item.class.name.tableize}_#{item.id}_defense_bonus" %>><%=  weapon_upgrade_link(@character, item.resource, item, "defense_bonus") -%></p></td>
          <td class="alantar_td"><p class="normal"><%= link_to image_tag('delete.png'), character_wizards_remove_item_from_inventory_path(:char_id => @character.id, :item_type => "Weapon", :weapon => item.resource.id, :delete_id => item.id ), :remote => true %></p></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>