<script type="text/javascript">

    function proceed() {
        var radio_buttons = $("input[name='fight_style_id']");
        if (radio_buttons.filter(':checked').length == 0) {
            alert("Musisz wybrać styl walki, zanim będziesz mógł przejść dalej.")
        } else {
            $("form").submit();
        }
    }
</script>
