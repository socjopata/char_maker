if @errors.present?
  page << "jQuery(\"input[name='weapon_proficiency']\").filter(\"input[value='#{params[:name]}']\").removeAttr('checked');"
  page << "$.colorbox({html: '#{escape_javascript(render(:partial => 'not_enough_points'))}'});"
else
  page << "jQuery('#skill_counter').text('Określ proszę, w jakich broniach będziesz biegły. Liczba wolnych biegłości: #{session[:weapon_class_preference_left]}');"
  params[:value]=="true" ? (page << "jQuery('#skill_counter').effect('highlight', {color: 'red'}, 1500);") : (page << "jQuery('#skill_counter').effect('highlight', {color: 'green'}, 1500);")
end

